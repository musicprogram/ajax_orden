<p id="notice"><%= notice %></p>

<h1>Listing Ordens</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cantidad</th>
      <th>Numero</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ordens.each do |orden| %>
      <tr>
        <td><%= orden.name %></td>
        <td><%= orden.cantidad %></td>
        <td><%= orden.numero %></td>
        <td><%= link_to 'Recursos', orden_recurso_ordens_path(orden) %></td>
        <td><%= link_to 'Show', orden %></td>
        <td><%= link_to 'Edit', edit_orden_path(orden) %></td>
        <td><%= link_to 'Destroy', orden, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

